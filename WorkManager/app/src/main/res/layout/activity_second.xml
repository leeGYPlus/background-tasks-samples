<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.SecondActivity">


    <Button

        android:text="startWork"
        android:id="@+id/btStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startWork"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button

        android:text="startPeriodicWork"
        android:id="@+id/btPeriodicWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startPeriodicWork"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btStart"/>
    <Button
        android:layout_marginTop="10dp"
        android:text="stopWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopWork"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btPeriodicWork" />

</androidx.constraintlayout.widget.ConstraintLayout>
